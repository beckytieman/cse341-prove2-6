<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>
    <main>
        <form class="product-form" action="/remove-product" method="POST">
            <div class="form-control">
                <label for="remProduct">Select Product to remove</label>
                <select name="remProduct" id="remProduct" value="remProduct">
                    <option value="">Book Title</option>
                    <% for (let product of prods) { %>
                        <option value="<%= product.title %>"><%= product.title %></option>
                    <% } %>
                </select>
                <!-- <label for="description">Book Description</label>
                <input type="text" name="description" id="description"> -->
            </div>
            <button class="btn" type="submit">Remove Product</button>
        </form>
    </main>
    <%- include('includes/end.ejs') %>   